{
  "name": "cross-tab-state",
  "version": "0.1.0",
  "description": "React hooks for syncing useState or useReducer across multiple browser tabs.",
  "author": "Anupam Srivastava",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meliodas113/cross-tab-state.git"
  },
  "bugs": {
    "url": "https://github.com/meliodas113/cross-tab-state/issues"
  },
  "homepage": "https://github.com/meliodas113/cross-tab-state#readme",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run --environment jsdom",
    "test:watch": "vitest --watch --environment jsdom",
    "dev": "tsup src/index.ts --watch --dts",
    "build": "tsup src/index.ts --dts"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.0.0",
    "jsdom": "^26.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.5.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "react",
    "hooks",
    "cross-tab",
    "state",
    "sync",
    "useState",
    "useReducer",
    "broadcastchannel"
  ],
  "license": "MIT"
}
