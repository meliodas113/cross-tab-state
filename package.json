{
  "name": "cross-tab-state",
  "version": "0.1.0",
  "description": "A tiny React hook for sharing reducer state across browser tabs using BroadcastChannel.",
  "keywords": [
    "react",
    "hook",
    "state",
    "cross-tab",
    "broadcastchannel",
    "reducer",
    "synchronization"
  ],
  "author": "Anupam Srivastava",
  "license": "MIT",
  "homepage": "https://github.com/meliodas113/cross-tab-state#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meliodas113/cross-tab-state.git"
  },
  "bugs": {
    "url": "https://github.com/meliodas113/cross-tab-state/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --watch --dts",
    "build": "tsup src/index.ts --dts",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.2.0",
    "eslint": "^9.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.0"
  }
}
